{
    "id": "customGaugeWidget",
    "name": "Custom Gauge Widget",
    "description": "A customizable gauge widget with an arrow that changes with the value.",
    "version": "1.0.0",
    "eula": "",
    "license": "",
    "newInstancePrefix": "test",
    "webcomponents": [
        {
            "kind": "main",
            "tag": "custom-gauge-widget",
            "url": "https://thomasgeier03.github.io/CustomWidgets/Copilot-Test-Gauge/main.js",
            "integrity": "",
            "ignoreIntegrity": true
        },
        {
            "kind": "styling",
            "tag": "custom-gauge-widget-styling",
            "url": "https://thomasgeier03.github.io/CustomWidgets/Copilot-Test-Gauge/styling.js",
            "integrity": "",
            "ignoreIntegrity": true
        }
    ],
    "properties": {
        "width": {
            "type": "integer",
            "default": 600
        },
        "height": {
            "type": "integer",
            "default": 320
        },
        "color": {
            "description": "Set the color for the arrow.",
            "type": "string",
            "default": "#FF0000"
        }
    },
    "events": {},
    "methods": {
        "setColor": {
            "description": "Set the color for the arrow.",
            "parameters": [
                {
                    "name": "color",
                    "type": "string",
                    "description": "The color to set."
                }
            ],
            "body": "this.color = color;"
        }
    }
}