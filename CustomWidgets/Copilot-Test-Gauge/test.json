{
    "id": "customGaugeWidget",
    "name": "Custom Gauge Widget",
    "description": "A customizable gauge widget with adjustable placeholders and colors.",
    "version": "1.0.0",
    "eula": "",
    "license": "",
    "newInstancePrefix": "test",
    "webcomponents": [
        {
            "kind": "main",
            "tag": "custom-gauge-widget",
            "url": "https://thomasgeier03.github.io/CustomWidgets/Copilot-Test-Gauge/main.js",
            "integrity": "",
            "ignoreIntegrity": true
        }
    ],
    "properties": {
        "width": {
            "type": "integer",
            "default": 600
        },
        "height": {
            "type": "integer",
            "default": 320
        },
        "placeholders": {
            "description": "Placeholders for the gauge.",
            "type": "array",
            "default": ["Placeholder 1", "Placeholder 2", "Placeholder 3"]
        },
        
        "colors": {
            "description": "Set the colors for each placeholder.",
            "type": "array",
            "default": ["#FF0000", "#00FF00", "#0000FF"]
        }
    },
    "events": {},
    "methods": {
        "setValue":{
            "description": "Set the value of the gauge.",
            "parameters": {
                    "name": "value",
                    "type": "array",
                    "description": "The value to set the gauge to."
            },
            "body": "this.value = value; this.update();"
        },
        "getValue":{
            "description": "Get the current value of the gauge.",
            "parameters": {
                "type": "array",
                "description": "The current value of the gauge."
            },
            "body": "return this.value;"
        }
    },
    "dataBindings": {
        "dataBinding": {
            "feeds": [
                {
                "id": "dimensions",
                "description": "Dimensions",
                "type": "dimension"
                },
                {
                "id": "measures",
                "description": "Measures",
                "type": "mainStructureMember"
                }
            ]
        }
  }
}